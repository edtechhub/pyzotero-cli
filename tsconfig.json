{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "importHelpers": true,
    "target": "es2017",
    "disableSizeLimit": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": false,
    "sourceMap": false,
    "downlevelIteration": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ]
  },
  "files": [
    "bin/zotero-cli.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "typings"
  ]
}